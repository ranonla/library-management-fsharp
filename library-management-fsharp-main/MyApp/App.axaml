<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyApp.App">

    <Application.Resources>
        <!-- Global buttons style colors -->
        <SolidColorBrush x:Key="ButtonMainBg" Color="#EEE"/>
        <SolidColorBrush x:Key="ButtonMainPointerOver" Color="Pink"/>
        <SolidColorBrush x:Key="ButtonMainPressed" Color="Pink"/>
        <SolidColorBrush x:Key="ButtonActionBg" Color="#d6488fff"/>
        <SolidColorBrush x:Key="ButtonActionPointerOver" Color="#7421f9ff"/>
        <SolidColorBrush x:Key="ButtonActionPressed" Color="Gray"/>
    </Application.Resources>

    <Application.Styles>
        <!-- Light theme -->
        <FluentTheme/>
    </Application.Styles>

</Application>