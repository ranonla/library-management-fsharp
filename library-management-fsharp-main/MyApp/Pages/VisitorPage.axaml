<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyApp.Pages.VisitorPage">
                
    <UserControl.Styles>
    <Style Selector="Button.Action"> 
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="7"/>
        <Setter Property="Background" Value="{StaticResource ButtonActionBg}"/>
        <Setter Property="Foreground" Value="White"/> 
    </Style>

    <!-- HOVER -->
    <Style Selector="Button.Action:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource ButtonActionPointerOver}"/>
    </Style>

    <!-- PRESSED -->
    <Style Selector="Button.Action:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource ButtonActionPressed}"/>
    </Style>

</UserControl.Styles>

    <Grid RowDefinitions="*,Auto">
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
                   Text="Choose Your Option"
                   FontSize="30"
                   FontWeight="Bold"
                   Margin="20"/>
            <Button Classes="Action" x:Name="ReadBooksBtn" Content="View Books"/>
            <Button Classes="Action" x:Name="BorrowBookBtn" Content="Borrow Book"/>
            <Button Classes="Action" x:Name="ReturnBookBtn" Content="Return Book"/>
        </StackPanel>

        <Button x:Name="BackBtn"
                Grid.Row="2"
                Content="â†"
                HorizontalAlignment="Left"
                Margin="10"
                FontSize="26"
                Width="60"
                HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>